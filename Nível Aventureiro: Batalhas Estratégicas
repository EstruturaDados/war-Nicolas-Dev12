#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <time.h>

typedef struct {
    char nome[50];
    char corExercito[20];
    int tropas;
} Territorio;

// Fun√ß√£o de ataque entre dois territ√≥rios
void simularAtaque(Territorio *atacante, Territorio *defensor) {
    int dadoA = rand() % 6 + 1;
    int dadoD = rand() % 6 + 1;

    printf("\nüé≤ Dados Sorteados ‚Üí Ataque: %d | Defesa: %d\n", dadoA, dadoD);

    if (dadoA > dadoD) {
        defensor->tropas--;
        printf("üí• %s venceu! %s perdeu 1 tropa.\n", atacante->nome, defensor->nome);

        if (defensor->tropas <= 0) {
            printf("üè¥ Territ√≥rio %s conquistado por %s!\n",
                   defensor->nome, atacante->corExercito);
            strcpy(defensor->corExercito, atacante->corExercito);
            defensor->tropas = 1;
        }
    } else {
        printf("üõ°Ô∏è %s defendeu com sucesso!\n", defensor->nome);
    }
}

int main() {
    srand(time(NULL));
    int qtd = 5;
    Territorio *territorios = (Territorio *) calloc(qtd, sizeof(Territorio));

    // Cadastro dos territ√≥rios
    for (int i = 0; i < qtd; i++) {
        printf("\n=== Cadastro do Territ√≥rio %d ===\n", i + 1);
        printf("Nome: ");
        fgets(territorios[i].nome, sizeof(territorios[i].nome), stdin);
        territorios[i].nome[strcspn(territorios[i].nome, "\n")] = '\0';

        printf("Cor do Ex√©rcito: ");
        fgets(territorios[i].corExercito, sizeof(territorios[i].corExercito), stdin);
        territorios[i].corExercito[strcspn(territorios[i].corExercito, "\n")] = '\0';

        printf("N√∫mero de Tropas: ");
        scanf("%d", &territorios[i].tropas);
        getchar();
    }

    int a, d;
    while (1) {
        printf("\nEscolha territ√≥rio atacante (1 a 5, 0 para sair): ");
        scanf("%d", &a);
        if (a == 0) break;

        printf("Escolha territ√≥rio defensor (1 a 5): ");
        scanf("%d", &d);

        simularAtaque(&territorios[a - 1], &territorios[d - 1]);
    }

    // Exibe mapa atualizado
    printf("\n=== Estado Final do Mapa ===\n");
    for (int i = 0; i < qtd; i++) {
        printf("Territ√≥rio %d: %s | Ex√©rcito: %s | Tropas: %d\n",
               i + 1, territorios[i].nome, territorios[i].corExercito, territorios[i].tropas);
    }

    free(territorios);
    return 0;
}
int main() {
    srand(time(NULL));
    int qtd = 5;
    Territorio *territorios = (Territorio *) calloc(qtd, sizeof(Territorio));

    for (int i = 0; i < qtd; i++) {
        printf("\n=== Cadastro do Territ√≥rio %d ===\n", i + 1);
        printf("Nome: ");
        fgets(territorios[i].nome, 50, stdin);
        territorios[i].nome[strcspn(territorios[i].nome, "\n")] = '\0';
        printf("Cor do Ex√©rcito: ");
        fgets(territorios[i].cor, 20, stdin);
        territorios[i].cor[strcspn(territorios[i].cor, "\n")] = '\0';
        printf("N√∫mero de Tropas: ");
        scanf("%d", &territorios[i].tropas);
        getchar();
    }

    int opcaoA, opcaoD;
    do {
        printf("\nEscolha territ√≥rio atacante (1-5, 0 para sair): ");
        scanf("%d", &opcaoA);
        if (opcaoA == 0) break;
        printf("Escolha territ√≥rio defensor (1-5): ");
        scanf("%d", &opcaoD);

        simularAtaque(&territorios[opcaoA - 1], &territorios[opcaoD - 1]);
    } while (1);

    free(territorios);
    return 0;
}
